<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity3"
    android:background="#84E3EF">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="InvalidId,MissingConstraints"
        android:id="@+id/f1">

        <TextView
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:background="#FF0000"
            android:layout_marginTop="16dp"
            android:id="@+id/tv1"
            android:layout_marginLeft="16dp"></TextView>

        <TextView
            android:id="@+id/tv2"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:background="#005EFF"
            android:layout_below="@id/tv1"
            android:layout_marginLeft="16dp"></TextView>

        <TextView
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:background="#FF9800"
            android:layout_below="@id/tv2"
            android:layout_marginLeft="16dp"></TextView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        app:layout_constraintLeft_toRightOf="@id/f1"
        android:layout_marginLeft="50dp"
        android:id="@+id/f2">

        <TextView
            android:id="@+id/tv2_1"
            android:layout_width="30dp"
            android:layout_height="90dp"
            android:layout_marginTop="16dp"
            android:background="#000000"></TextView>

        <TextView
            android:id="@+id/tv2_2"
            android:layout_width="30dp"
            android:layout_height="90dp"
            android:layout_alignTop="@id/tv2_1"
            android:layout_toRightOf="@id/tv2_1"
            android:background="#E1D039"></TextView>

        <TextView
            android:layout_width="30dp"
            android:layout_height="90dp"
            android:layout_alignTop="@id/tv2_1"
            android:layout_toRightOf="@id/tv2_2"
            android:background="#F44336"></TextView>
    </RelativeLayout>


    <TextView
        android:id="@+id/textView3"
        android:layout_width="300dp"
        android:layout_height="120dp"
        android:layout_marginStart="16dp"

        android:layout_marginLeft="16dp"
        android:layout_marginTop="44dp"
        android:background="#890202"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout"
        tools:ignore="MissingConstraints"

        ></TextView>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="300dp"
        android:layout_height="20dp"

        android:layout_marginTop="50dp"
        android:background="#FDFDFD"
        app:layout_constraintStart_toStartOf="@+id/textView3"

        app:layout_constraintTop_toTopOf="@+id/textView3"
        tools:ignore="DuplicateIds,MissingConstraints"></TextView>


    <TextView
        android:id="@+id/textView5"
        android:layout_width="180dp"
        android:layout_height="120dp"

        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="44dp"
        android:background="#D00A0A"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        tools:ignore="MissingConstraints"></TextView>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="180dp"
        android:layout_height="20dp"

        android:layout_marginTop="50dp"
        android:background="#FDFDFD"
        app:layout_constraintStart_toStartOf="@+id/textView5"

        app:layout_constraintTop_toTopOf="@+id/textView5"
        tools:ignore="DuplicateIds,MissingConstraints"></TextView>


    <TextView
        android:id="@+id/textView6"
        android:layout_width="20dp"
        android:layout_height="120dp"

        android:layout_marginStart="56dp"
        android:layout_marginLeft="56dp"


        android:background="#FDFDFD"
        app:layout_constraintStart_toStartOf="@+id/textView5"
        app:layout_constraintTop_toTopOf="@+id/textView5"
        tools:ignore="DuplicateIds,MissingConstraints"></TextView>

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">


        <TextView
            android:layout_width="200dp"
            android:layout_height="160dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="140dp"
            android:background="#FF0008"
            tools:ignore="MissingConstraints" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="170dp"
            android:background="#FAC528"
            tools:ignore="MissingConstraints" />

        <TextView
            android:layout_width="160dp"
            android:layout_height="120dp"
            android:layout_marginLeft="230dp"
            android:layout_marginTop="140dp"
            android:background="#FF0008"
            tools:ignore="MissingConstraints" />

        <TextView
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:layout_marginLeft="230dp"
            android:layout_marginTop="180dp"
            android:background="#FFFFFF"
            tools:ignore="MissingConstraints" />

    </FrameLayout>





</androidx.constraintlayout.widget.ConstraintLayout>