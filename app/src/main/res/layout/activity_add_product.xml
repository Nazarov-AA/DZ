<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddProductActivity">

    <EditText
        android:id="@+id/textName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:hint="name product"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="16dp" />

    <EditText
        android:id="@+id/textPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="price product"
        android:layout_margin="16dp"
        android:layout_marginTop="108dp"
        app:layout_constraintTop_toBottomOf="@id/textName"
        tools:layout_editor_absoluteX="33dp" />



    <CheckBox
        android:id="@+id/InStock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="На складе"
        android:layout_margin="16dp"
        android:layout_marginTop="108dp"
        app:layout_constraintTop_toBottomOf="@id/textPrice"/>


    <Button
        android:id="@+id/buttonAdd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Add product"
        app:layout_constraintTop_toBottomOf="@id/InStock"/>

    <Button
        android:id="@+id/buttonShow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text=" Show all product"
        app:layout_constraintTop_toBottomOf="@id/buttonAdd"/>

    <Button
        android:id="@+id/buttonClear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Clear database"
        app:layout_constraintTop_toBottomOf="@id/buttonShow"/>

    <TextView
        android:id="@+id/textResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Result"
        app:layout_constraintTop_toBottomOf="@id/buttonClear"/>





</androidx.constraintlayout.widget.ConstraintLayout>